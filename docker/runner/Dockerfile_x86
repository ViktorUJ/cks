FROM ubuntu:24.04

ENV SYSTEM_DEPENDENCIES="curl unzip make git wget vim jq python3-pip python3.11-venv pre-commit"
ENV TERRAFORM_VERSION="1.6.6"
ENV TERRAGRUNT_VERSION="0.54.8"

#install system dependencies
RUN apt update && \
    apt install ${SYSTEM_DEPENDENCIES} -y && \
    apt  clean && \
    rm -rf /var/lib/apt/lists/*

#install aws cli
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip"  \
    -o "awscliv2.zip" -s && \
    unzip awscliv2.zip >/dev/null && \
    ./aws/install >/dev/null && \
    aws --version && \
    make --version && \
    rm awscliv2.zip && \
    rm -rf aws

#install terragrunt
RUN curl -LO https://github.com/gruntwork-io/terragrunt/releases/download/v${TERRAGRUNT_VERSION}/terragrunt_linux_amd64 && \
    chmod +x terragrunt_linux_amd64 && \
    mv terragrunt_linux_amd64 /usr/bin/terragrunt

#install terraform
RUN curl -sSL https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_amd64.zip -o \
    terraform.zip && \
    unzip terraform.zip && \
    mv terraform /usr/bin/terraform && \
    rm -rf terraform.zip

#make python3 as default python enterpreter
RUN ln -sf /usr/bin/python3 /usr/bin/python && \
    ln -sf /usr/bin/pip3 /usr/bin/pip

ENTRYPOINT ["/bin/bash"]
